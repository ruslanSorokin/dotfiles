layout {
  tab name="home" cwd="~" {
    pane command="yazi"
  }
  tab name="config" cwd="~/.config" {
    pane command="yazi"
  }
  tab name="chezmoi" cwd="~/.local/share/chezmoi"{
    pane command="yazi"
  }

  default_tab_template {
     pane size=1 borderless=true {
       plugin location="compact-bar"
     }
     children
  }
}

